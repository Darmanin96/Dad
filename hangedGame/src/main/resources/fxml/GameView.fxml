<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<HBox spacing="10">
    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@/images/hangman/9.png" />
        </image>
    </ImageView>
    <Label fx:id="SecretWord" text="__________" style="-fx-font-size: 24px;"/>
    <TextField fx:id="guessInput" promptText="Ingresa una letra" onAction="#onTextAction"/>
    <HBox spacing="10">
        <Button fx:id="LetraButton" text="Letra" onAction="#onLetraAction"/>
        <Button fx:id="ResolverButton" text="Resolver" onAction="#onResolverAction"/>
    </HBox>
</HBox>
