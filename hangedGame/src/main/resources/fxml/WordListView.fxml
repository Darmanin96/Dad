<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="dad.controllers.PalabrasController" spacing="10" alignment="CENTER">
    <ListView fx:id="wordListView" prefHeight="200.0" prefWidth="300.0"/>
    <TextField fx:id="newWordInput" promptText="Añadir nueva palabra"/>
    <Button text="Añadir" onAction="#addWord"/>
    <Button text="Quitar" onAction="#removeWord"/>
</VBox>
